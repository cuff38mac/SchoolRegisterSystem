<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.DialogAddFacultyController"
            prefHeight="400.0" prefWidth="600.0">

    <headerText>Add a Student to System</headerText>
    <content>
        <GridPane>
            <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="10" >
                <Label>First Name: </Label>
                <TextField fx:id="facultyFirstName"></TextField>
                <Label>Last Name: </Label>
                <TextField fx:id="facultyLastName"></TextField>
                <Label>Course Teaching: </Label>
                <ComboBox fx:id="courseTeaching" prefWidth="150.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Intro to Algebra" />
                            <String fx:value="Baking 101" />
                            <String fx:value="Intro to Java" />
                            <String fx:value="Intro to Cooking" />
                            <String fx:value="Advanced Life" />
                        </FXCollections>
                    </items>
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </ComboBox>
            </VBox>
        </GridPane>
    </content>
</DialogPane>
